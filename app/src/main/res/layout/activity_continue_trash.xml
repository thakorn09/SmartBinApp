<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3ffe8"
    tools:context=".ContinueTrashActivity">



    <pl.droidsonroids.gif.GifImageView
        android:layout_above="@+id/QAscan"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/source"/>

    <LinearLayout android:id="@+id/QAscan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:text="Do you want to continue trash?"
            android:textColor="#000000"
            android:layout_width="210dp"
            android:layout_height="80dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="35dp"
            android:layout_gravity="center"
            android:textSize="30dp" />

        <Button android:id="@+id/btn_YesTrash"
            android:text="YES"
            android:textColor="#000000"
            android:background="@drawable/custom_buttom"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:layout_marginBottom="35dp"/>

        <Button android:id="@+id/btn_NoTrash"
            android:text="NO"
            android:textColor="#000000"
            android:background="@drawable/custom_buttom"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:layout_marginBottom="190dp"/>

    </LinearLayout>

</RelativeLayout>